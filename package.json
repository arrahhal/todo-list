{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:dist/css",
    "copy:html": "copyfiles -u 1 ./src/*.html dist",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange 'src/*.html' -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch src/sass:dist/css",
    "watch:webpack": "webpack --watch",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server dist --files dist",
    "start": "npm-run-all copy --parallel watch serve",
    "build:webpack": "webpack",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss dist/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rahhaly/todo-list.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rahhaly/todo-list/issues"
  },
  "homepage": "https://github.com/rahhaly/todo-list#readme",
  "devDependencies": {
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  },
  "dependencies": {
    "date-fns": "^2.29.3"
  }
}
